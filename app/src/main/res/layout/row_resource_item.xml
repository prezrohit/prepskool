<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/pdf_img_view"
                android:layout_margin="14dp"
                android:src="@mipmap/ic_pdf"
                android:layout_width="35dp"
                android:layout_height="35dp" />

            <TextView
                android:id="@+id/lbl_resource_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/pdf_img_view"
                android:layout_marginTop="14dp"
                android:layout_marginStart="5dp"
                android:hint="Maths Sample Paper 1 "/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_view_resource"
                android:layout_width="130dp"
                android:layout_height="30dp"
                android:text="View PDF"
                android:textSize="10sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_toRightOf="@id/pdf_img_view"
                android:layout_below="@id/lbl_resource_name"
                app:cornerRadius="22dp"
                style="@style/AppTheme.RoundedCornerMaterialButton" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_download_resource"
                android:layout_width="130dp"
                android:layout_height="30dp"
                android:text="Download PDF"
                android:textSize="10sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_toRightOf="@id/btn_view_resource"
                android:layout_below="@id/lbl_resource_name"
                app:cornerRadius="22dp"
                android:layout_marginStart="8dp"
                android:backgroundTint="#5acad6"
                style="@style/AppTheme.RoundedCornerMaterialButton" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
