<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PaymentActivity">

    <TextView
        android:id="@+id/lbl_resource_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="monospace"
        android:layout_marginTop="@dimen/dimen_40dp"
        android:hint="@string/string_hint_resource"
        android:textStyle="bold"
        android:textSize="@dimen/dimen_20dp" />

    <TextView
        android:id="@+id/lbl_resource_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:fontFamily="monospace"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:hint="@string/string_resource_price"
        android:textSize="@dimen/dimen_18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dimen_30dp"
        android:textSize="15sp"
        android:text="Enter Phone Number to Continue"
        />

    <EditText
        android:id="@+id/edt_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_50dp"
        android:layout_marginEnd="@dimen/dimen_50dp"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:hint="Phone Number"
        android:inputType="numberSigned"/>

    <Button
        android:id="@+id/btn_pay"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginStart="@dimen/dimen_50dp"
        android:layout_marginEnd="@dimen/dimen_50dp"
        android:layout_marginTop="@dimen/dimen_30dp"
        android:text="@string/string_pay"
        android:textSize="20sp"
        android:onClick="startPayment"
        />

</LinearLayout>